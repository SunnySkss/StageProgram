<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e6d0d0"
    tools:context=".FragmentTop">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:fitsSystemWindows="true"
        android:background="@color/colorRed"
        >


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"

            app:contentScrim="@color/colorRed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <ImageView

                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/first_image" />
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorRed"
                android:alpha="0.7" >

                <TextView
                    android:id="@+id/VedTitleTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:textStyle="italic"

                    android:textSize="20dp"/>


                <TextView
                    android:layout_below="@id/VedTitleTop"
                    android:id="@+id/VedViewsTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textStyle="normal"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_below="@id/VedTitleTop"
                    android:id="@+id/VedHowLongTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="normal"
                    android:textSize="12dp"/>
            </RelativeLayout>




        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="180dp"
        android:id="@+id/myRecyclerTop"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>





</android.support.design.widget.CoordinatorLayout>




